---
const { title, showButton, img } = Astro.props;
---

<section class="background">
  <p>{title}</p>
  {showButton ? <button> Reserve your spot </button> : null}
</section>

<style define:vars={{ img }}>
  .background {
    background-image: var(--img);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    height: 100vh;
    position: relative;
    z-index: 0;
    & p {
      color: white;
      font-size: 110px;
      text-align: left;
      color: white;
      font-weight: bold;
      width: 600px;
      margin-left: 20px;
      padding-top: 10vh;
    }
  }
  button {
    position: absolute;
    bottom: 40px;
    left: 40px;
    padding: 20px 30px;
    background-color: rgb(208, 251, 249);
    font-size: 16px;
    color: black;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  button:hover {
    background-color: rgba(200, 124, 185, 1);
    color: white;
    transition: background-color 0.3s ease;
  }
</style>

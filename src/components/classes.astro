---
import Card from "./card.astro";
import dataClasses from "../assets/data/class.json";
import { Picture } from "astro:assets";
---

<section>
  <main>
    <aside>
      <h2>Booking Experience for Classes</h2>
      <p>
        Explore our diverse range of classes designed to enhance your movement
        skills and overall fitness.
      </p>
      <p>Join us every Friday evening for an invigorating experience!</p>
    </aside>
    {
      dataClasses.map((item, index) => (
        <article>
          <header>
            <div class="header-image">
              <Picture src={item.img} alt={item.title} width={1000} height={300} />
            </div>
            <p>{item.category}</p>
          </header>
          <main>
            <p>{item.title}</p>
            <p>{item.description}</p>
          </main>
          <footer>
            <p>Fridays 7:00 PM - 9:00PM</p>
            <p>Book now</p>
          </footer>
        </article>
      ))
    }
  </main>
</section>

<style>
  section main {
    display: grid;
    grid-template-areas: "aside card1 card2" "aside card3 card4" "aside card5 card5";
    grid-template-columns: 3fr 2fr 2fr;
  }

  div {
    height: 450px;
  }

  aside {
    grid-area: aside;
    background-color: rgba(0, 0, 0, 1);
    color: white;
    padding: 20px;
    h2 {
      font-size: 48px;
      margin-bottom: 10px;
    }
    p {
      font-size: 16px;
      margin-bottom: 10px;
    }
  }
  .card1 {
    grid-area: card1;
  }
  .card2 {
    grid-area: card2;
    border-left: 1px solid gray;
  }
  .card3 {
    grid-area: card3;
  }
  .card4 {
    border-left: 1px solid gray;
    grid-area: card4;
  }
  .card5 {
    grid-area: card5;
  }
</style>
